generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL") //No tocar ya que migre a la version 6 y esto sigue funcionando
}

model User {
  //Si pongo @id es como una fk
  //Si pongo un @default te pone uno por defecto si no pasas id, en este caso con autoincremento
  id        Int      @id @default(autoincrement())
  name      String
  surname   String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}
