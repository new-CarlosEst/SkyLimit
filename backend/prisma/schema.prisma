generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

//Esto crea un tabla en la bd al migralo
model User {
  //Si pongo @id es como una fk
  //Si pongo un @default te pone uno por defecto si no pasas id, en este caso con autoincremento
  id        Int      @id @default(autoincrement())
  name      String
  surname   String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}
